<div class="well">
    <h4>Welcome to the Beautiful Rising Toolbox</h4>
    <div class="row">
        <% _.each(App.config['module-types'], function(value, key, list) { %>
        <div class="col-xs-12 col-sm-6 col-lg-3">
            <h4><%= capitalize(value.name) %></h4>
            <h6>These spaces will hold copy when that copy is written. If it is never written it will never be displayed.</h6>
        </div>
        <% }); %>
    </div>
</div>

<div class="well category-selection">
    <h6>Browse by category</h6>
    <div class="row">
        <% _.each(App.config['module-types'], function(value, key, list) { %>
        <div class="col-xs-12 col-sm-4 col-lg-2">
            <button class="category btn btn-block" data-category="<%= value.one %>"><%= capitalize(value.many) %></button>
        </div>
        <% }); %>
        <div class="col-xs-12 col-sm-4 col-lg-2">
            <button class="category btn btn-block" data-category="all">All</button>
        </div>
    </div>
</div>

<div class="sorting-selection">
    <span>Sort By</span>
    <% _.each({
        'Newest':   'newest',
        'Oldest':   'oldest',
        'A-Z':      'alpha',
        'Z-A':      'omega'
    }, function(value, key, list) { %>
    <span>
        <a class="sorting" data-sorting="<%= value %>"><%= key %></a>
    </span>
    <% }); %>
</p>

<section id="modules-list"></section>

